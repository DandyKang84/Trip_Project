<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemIvPiture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/man" />

    <TextView
        android:id="@+id/itemTvArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="제주"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/itemIvPiture"
        app:layout_constraintTop_toTopOf="@+id/itemIvPiture" />

    <TextView
        android:id="@+id/itemIvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="10,200원"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemIvPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/itemIvPrice"
        app:layout_constraintTop_toBottomOf="@+id/itemIvPrice"
        app:srcCompat="@drawable/payment_24" />

    <TextView
        android:id="@+id/itemIvPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최저가"
        app:layout_constraintBottom_toBottomOf="@+id/itemIvPrice"
        app:layout_constraintEnd_toStartOf="@+id/itemIvPrice"
        app:layout_constraintTop_toTopOf="@+id/itemIvPrice" />

    <TextView
        android:id="@+id/itemTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="산방산 탄산온천 이용권"
        app:layout_constraintStart_toEndOf="@+id/itemIvPiture"
        app:layout_constraintTop_toBottomOf="@+id/itemTvArea" />


</androidx.constraintlayout.widget.ConstraintLayout>